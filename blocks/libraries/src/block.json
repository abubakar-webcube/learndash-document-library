{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "learndash/document-libraries",
  "title": "LearnDash Document Libraries",
  "category": "widgets",
  "icon": "book",
  "description": "Display LearnDash document libraries with flexible layouts, filters, and Tailwind-driven UI.",
  "keywords": [
    "learndash",
    "documents",
    "library",
    "files"
  ],
  "textdomain": "learndash-document-library",
  "attributes": {
    "exclude": {
      "type": "array",
      "default": []
    },
    "limit": {
      "type": "number",
      "default": 9
    },
    "libraries": {
      "type": "array",
      "default": []
    },
    "categories": {
      "type": "array",
      "default": []
    },
    "layout": {
      "type": "string",
      "default": "list",
      "enum": [
        "list",
        "grid",
        "folder"
      ]
    },
    "search": {
      "type": "boolean",
      "default": true
    }
  },
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "editorScript": "file:./index.js",
  "viewScript": "file:./view.js",
  "style": "file:./style-index.css",
  "editorStyle": "file:./index.css"
}
